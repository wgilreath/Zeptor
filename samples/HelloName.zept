package xyz.zepton.samples;

prog HelloName {

  begin {

     println();
     print("Hello, what is your name? ->");

     String name = readLine();
   
     println();
   
     printf("Hello: %s, a pleasure to meet you!%n", name);
     println();
   
     nop();
   
     exit(0);
   
  }//end begin 
  
}//end helloName